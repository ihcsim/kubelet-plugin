apiVersion: apps/v1
kind: DaemonSet
metadata:
  name: kvm-device-plugin
  namespace: kube-system
  labels:
    app: kvm-device-plugin
spec:
  selector:
    matchLabels:
      app: kvm-device-plugin
  updateStrategy:
    type: RollingUpdate
    rollingUpdate:
      maxUnavailable: 1
  template:
    metadata:
      labels:
        app: kvm-device-plugin
    spec:
      priorityClassName: system-node-critical
      tolerations:
      - operator: "Exists"
        effect: "NoExecute"
      - operator: "Exists"
        effect: "NoSchedule"
      affinity:
        nodeAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
            nodeSelectorTerms:
            - matchExpressions:
              - operator: In
                key: node-role.kubernetes.io/master
                values:
                - "true"
      containers:
      - image: ko://github.com/ihcsim/kvm-device-plugin
        name: kvm-device-plugin
        resources:
          requests:
            cpu: 50m
            memory: 100Mi
          limits:
            cpu: 50m
            memory: 256Mi
        env:
        - name: KO_DATA_PATH
          value: /etc/cdi
        securityContext:
          privileged: true
          runAsUser: 0
        volumeMounts:
        - name: kvm
          mountPath: /dev/kvm
        - name: cdi
          mountPath: /etc/cdi
        - name: device-plugins
          mountPath: /var/lib/kubelet/device-plugins
      volumes:
      - name: kvm
        hostPath:
          path: /dev/kvm
      - name: cdi
        hostPath:
          path: /etc/cdi
      - name: device-plugins
        hostPath:
          path: /var/lib/kubelet/device-plugins/
